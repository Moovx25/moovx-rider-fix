{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "target": "esnext",
    "lib": ["esnext"],
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "react-native",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@app/*": ["app/*"],
      "@components/*": ["components/*"],
      "@services/*": ["services/*"],
      "@assets/*": ["assets/*"],
      "@constants/*": ["constants/*"],
      "@hooks/*": ["hooks/*"],
      "@ui/*": ["components/ui/*"],
      "@utils/*": ["utils/*"]
    },
    "types": ["expo", "firebase"]
  },
  "include": [
    "app/**/*",
    "components/**/*",
    "services/**/*",
    "constants/**/*",
    "hooks/**/*",
    "utils/**/*",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}